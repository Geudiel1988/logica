entero dias, tiempo, minutos, horas, x

inicio
	escriba "digite el tiempo "
	lea tiempo
		si tiempo / 1440 <> 0 entonces
			dias <- tiempo / 1440
			x <- tiempo mod 1440
			horas <- x / 60
			minutos <- horas mod 60
			escriba "Han transcurrido: ",dias," dias ",horas," horas y ",minutos," minutos" 
		fin si
fin